                    <lc:LayoutGroup View="GroupBox" Header="Meias Elásticas: " Padding="-8" Width="120">
                        <lc:LayoutItem >
                            <lc:LayoutGroup>
                                <CheckBox  Style="{DynamicResource styleCheckBoxImage}" HorizontalAlignment="Left" IsChecked="{Binding Path=boolMeiasNao, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock VerticalAlignment="Center" Text="Não" HorizontalAlignment="Left"/>
                                <CheckBox  Style="{DynamicResource styleCheckBoxImage}" HorizontalAlignment="Left" IsChecked="{Binding Path=boolMeiasSim, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock VerticalAlignment="Center" Text="Sim" HorizontalAlignment="Left"/>
                            </lc:LayoutGroup>
                        </lc:LayoutItem>
                    </lc:LayoutGroup>

                    <lc:LayoutGroup View="GroupBox" Header="Dreno: " Padding="-8">
                        <lc:LayoutItem >
                            <lc:LayoutGroup>
                                <CheckBox  Style="{DynamicResource styleCheckBoxImage}" HorizontalAlignment="Left" IsChecked="{Binding Path=boolDrenoNao, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock VerticalAlignment="Center" Text="Não" HorizontalAlignment="Left"/>
                                <CheckBox  Style="{DynamicResource styleCheckBoxImage}" HorizontalAlignment="Left" IsChecked="{Binding Path=boolDrenoSim, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock VerticalAlignment="Center" Text="Sim" HorizontalAlignment="Left"/>
                                <Border BorderBrush="Gray" BorderThickness="1" >
                                    <lc:LayoutGroup>
                                        <TextBlock VerticalAlignment="Center" Text=" Tipo:" HorizontalAlignment="Left"/>
                                        <dxe:TextEdit  IsEnabled="{Binding Path=boolDrenoSim}" Text="{Binding Path=DrenosTipo,UpdateSourceTrigger=PropertyChanged}" MaxLength="53"/>
                                    </lc:LayoutGroup>
                                </Border>
                            </lc:LayoutGroup>
                        </lc:LayoutItem>
                    </lc:LayoutGroup>

                    <lc:LayoutGroup View="GroupBox" Header="Transfusão Sanguínea: " Padding="-8">
                        <lc:LayoutItem >
                            <lc:LayoutGroup>
                                <CheckBox  Style="{DynamicResource styleCheckBoxImage}" HorizontalAlignment="Left" IsChecked="{Binding Path=boolTransfusaoNao, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock VerticalAlignment="Center" Text="Não" HorizontalAlignment="Left"/>
                                <CheckBox  Style="{DynamicResource styleCheckBoxImage}" HorizontalAlignment="Left" IsChecked="{Binding Path=boolTransfusaoSim, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock VerticalAlignment="Center" Text="Sim" HorizontalAlignment="Left"/>
                                <Border BorderBrush="Gray" BorderThickness="1" >
                                    <lc:LayoutGroup>
                                        <TextBlock VerticalAlignment="Center" Text=" Observação:" HorizontalAlignment="Left"/>
                                        <!--<dxe:TextEdit DataContext="{Binding Path=TransOperatorio.TransfusaoSanguineaObservacao}" Text="{Binding Path=Tipo, UpdateSourceTrigger=PropertyChanged}"/>-->
                                        <dxe:TextEdit Text="{Binding Path=TransfusaoSanguineaObservacao, UpdateSourceTrigger=PropertyChanged}" MaxLength="47" IsEnabled="{Binding Path=boolTransfusaoSim}"/>
                                    </lc:LayoutGroup>
                                </Border>
                            </lc:LayoutGroup>
                        </lc:LayoutItem>
                    </lc:LayoutGroup>
                </lc:LayoutGroup>

                <lc:LayoutGroup>
                    <lc:LayoutGroup View="GroupBox" Header="Garrote Pneumático: " Padding="-8">
                        <lc:LayoutItem >
                            <lc:LayoutGroup>
                                <CheckBox  Style="{DynamicResource styleCheckBoxImage}" HorizontalAlignment="Left" IsChecked="{Binding Path=boolGarroteNao, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock VerticalAlignment="Center" Text="Não" HorizontalAlignment="Left"/>
                                <CheckBox Style="{DynamicResource styleCheckBoxImage}" HorizontalAlignment="Left" IsChecked="{Binding Path=boolGarroteSim, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock VerticalAlignment="Center" Text="Sim" HorizontalAlignment="Left"/>
                                <Border BorderBrush="Gray" BorderThickness="1" >
                                    <lc:LayoutGroup >
                                        <TextBlock VerticalAlignment="Center" Text="Tempo:" HorizontalAlignment="Left"/>
                                        <dxe:TextEdit  IsEnabled="{Binding Path=boolGarroteSim}" Text="{Binding Path=GarrotePneumaticoTempo, UpdateSourceTrigger=PropertyChanged}" MaxLength="47"/>
                                    </lc:LayoutGroup>
                                </Border>
                            </lc:LayoutGroup>
                        </lc:LayoutItem>
                    </lc:LayoutGroup>

                    <lc:LayoutGroup View="GroupBox" Header="Destino do Paciente: " Padding="-8">
                        <lc:LayoutItem >
                            <lc:LayoutGroup>
                                <dxe:TextEdit  Text="{Binding Path=TransOperatorio.DestinoPaciente,UpdateSourceTrigger=PropertyChanged}" MaxLength="128"/>
                            </lc:LayoutGroup>
                        </lc:LayoutItem>
                    </lc:LayoutGroup>
                </lc:LayoutGroup>

            </lc:LayoutGroup>

            <lc:LayoutGroup lc:LayoutControl.TabHeader="Parte 2">
                <Grid x:Name="GridInk">
                    <uc:MyInkCanvas x:Name="InkCorpoHumano" AllowDrop="True" ResizeEnabled="False" 
                               MouseDown="InkCanvas_MouseDown" Drop="InkCanvas_Drop" SelectionMoved="Ink_SelectionMoved">
                        <uc:MyInkCanvas.Background>
                            <ImageBrush ImageSource="{StaticResource imgCorpoHumano}"/>
                        </uc:MyInkCanvas.Background>
                    </uc:MyInkCanvas>
                </Grid>
                <lc:LayoutGroup Orientation="Vertical" HorizontalAlignment="Right">
                    <lc:LayoutItem>
                        <lc:LayoutGroup View="GroupBox" Header="Tricotomia:" Margin="5">
                            <lc:LayoutItem Label="Não" HorizontalAlignment="Left">
                                <CheckBox  Style="{DynamicResource styleCheckBoxImage}" IsChecked="{Binding Path=boolTricotomiaNao, UpdateSourceTrigger=PropertyChanged}"/>
                            </lc:LayoutItem>
                            <lc:LayoutItem Label="Sim" HorizontalAlignment="Center">
                                <CheckBox x:Name="chkTriconomia" Style="{DynamicResource styleCheckBoxImage}" IsChecked="{Binding Path=boolTricotomiaSim, UpdateSourceTrigger=PropertyChanged}"/>
                            </lc:LayoutItem>
                        </lc:LayoutGroup>
                    </lc:LayoutItem>
                    <lc:LayoutItem>
                        <lc:LayoutGroup View="GroupBox" Header="Placa de Eletrocautério:" Margin="5">
                            <lc:LayoutItem Label="Não" HorizontalAlignment="Left">
                                <CheckBox Style="{DynamicResource styleCheckBoxImage}" HorizontalAlignment="Right" IsChecked="{Binding Path=boolPlacaEletroNao, UpdateSourceTrigger=PropertyChanged}"/>
                            </lc:LayoutItem>
                            <lc:LayoutItem Label="Sim" HorizontalAlignment="Center">
                                <CheckBox x:Name="chkPlacaEletro" Style="{DynamicResource styleCheckBoxImage}" HorizontalAlignment="Right" IsChecked="{Binding Path=boolPlacaEletroSim, UpdateSourceTrigger=PropertyChanged}"/>
                            </lc:LayoutItem>
                        </lc:LayoutGroup>
                    </lc:LayoutItem>
                    <lc:LayoutItem>
                        <Grid>
                            <Image Source="{StaticResource imgLegendaChekList}" Width="250"/>
                            <Image Source="{StaticResource imgEletrocauterio}" Width="50" Height="35" PreviewMouseDown="Image_PreviewMouseDown" Margin="-150,-50,10,0" Cursor="Hand" ForceCursor="True" IsEnabled="{Binding ElementName=chkPlacaEletro, Path=IsChecked}"/>
                            <Image Source="{StaticResource imgTricotomia}" Width="50" Height="35" PreviewMouseDown="Image_PreviewMouseDown" Margin="-150,20,10,0" Cursor="Hand" ForceCursor="True" IsEnabled="{Binding ElementName=chkTriconomia, Path=IsChecked}"/>
                        </Grid>
                    </lc:LayoutItem>
                </lc:LayoutGroup>
            </lc:LayoutGroup>
        </lc:LayoutGroup>
    </lc:LayoutControl>
</core:UserControlBase>
