<core:HMVApplication x:Class="HMV.PEP.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:HMV.Core.Framework.WPF;assembly=HMV.Core.Framework.WPF"
             xmlns:my="clr-namespace:HMV.PEP.WPF"
             ShutdownMode="OnMainWindowClose"
             Startup="App_Startup">
    
    <Application.Resources>
        <ResourceDictionary>
            <ObjectDataProvider x:Key="odpSettings" ObjectType="{x:Type my:GetSettings}"/>            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HMV.Core.Framework.WPF;Component/Assets/Styles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HMV.Core.Framework.DevExpress.v12.1;Component/Assets/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>                                    
        </ResourceDictionary>
    </Application.Resources>
</core:HMVApplication>
