                    </TextBlock>-->
                </lc:LayoutGroup>
            </lc:LayoutItem>

            <lc:LayoutItem VerticalAlignment="Bottom" Margin="15">
                <lc:LayoutGroup>
                    <core:HMVButton HorizontalAlignment="Left" ToolTip="Click aqui para abrir a Avaliação de Risco" Height="30" Width="70" ButtonText="NAS" Style="{StaticResource styleBtnFechar}" ButtonImage="{StaticResource imgAANAS}"  Click="btnAvalRisco_Click"/>
                    <core:HMVButton HorizontalAlignment="Right" Name="btnPrescricao" Style="{StaticResource styleBtnPrescricao}" Click="btnPrescricao_Click" />
                </lc:LayoutGroup>
            </lc:LayoutItem>

        </lc:LayoutGroup>
