                    <TextBlock Grid.Column="1" Visibility="Visible" Name="Mensagem24" Style="{StaticResource styleTextBlockPacientePEP}" Height="30" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Center" TextAlignment="Left" Width="528">
                                <Run>Este documento deve ser preenchido em até 24 horas após a internação do paciente em CTI.</Run>
                    </TextBlock>
                    <!--<TextBlock Grid.Column="1" Visibility="Collapsed" Name="Mensagem48" Style="{StaticResource styleTextBlockPacientePEP}"  Height="30" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Center" TextAlignment="Left" Width="528" Grid.RowSpan="2">
