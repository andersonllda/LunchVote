        Title="..:: ATENÇÃO ::.." Height="150" Width="641" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid Style="{StaticResource styleGridSite}">

        <lc:LayoutGroup Orientation="Vertical">
            <lc:LayoutItem>
                <lc:LayoutGroup Orientation="Horizontal" HorizontalAlignment="Center">
                    <lc:LayoutItem Height="30" Width="30">
                        <Image  Source="{StaticResource imgAlertCaution}"/>
                    </lc:LayoutItem>
                    <lc:LayoutItem>
                        <TextBlock Grid.Column="1" Style="{StaticResource styleTextBlockTitulo}" Margin="0,10">
