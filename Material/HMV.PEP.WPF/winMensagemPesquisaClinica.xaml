<core:WindowBase x:Class="HMV.PEP.WPF.winMensagemPesquisaClinica"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxl="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
        xmlns:core="clr-namespace:HMV.Core.Framework.WPF;assembly=HMV.Core.Framework.WPF"  
        Title="..:: ATENÇÃO ::.." Width="441" Height="150" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Margin="0,0,0,0">
            <Grid x:Name="panel">
                <Border x:Name="shadow" CornerRadius="8" Margin="3,3,0,0" Background="Black" Opacity="0.15" />
                <Border Name="border1" Background="Gray" CornerRadius="7" Margin="0,0,3,3">
                    <Border Name="border2" CornerRadius="6">
                        <Grid Name="grid1" Style="{StaticResource styleGridSite}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="473*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="58"></RowDefinition>                                
                                <RowDefinition Height="40"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0" Height="30" Width="30" Source="{StaticResource imgAlertCaution}" />
                            <TextBlock Grid.Column="1" Style="{StaticResource styleTextBlockTitulo}" Margin="16,4,16,38">
                               <Run>Paciente em Pesquisa Clínica.</Run>
                            </TextBlock>
                            <TextBlock Grid.Column="1" Name="MensagemHMV" Style="{StaticResource styleTextBlockPacientePEP}" Height="34" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Left" Margin="3,24,12,0" Width="528">
                                <Run>Selecione qual opção você deseja acessar:</Run>
                                <LineBreak></LineBreak>                                
                            </TextBlock>                        
                            <core:HMVButton Visibility="Visible"  Grid.Column="1" Grid.Row="2"  HorizontalAlignment="Left" Click="btnEntrarProntuario_Click" VerticalAlignment="Center" Margin="0,0,0,0" Name="btnEntrarProntuario" Style="{StaticResource styleBtnAddMinhaLista}" ButtonImage="{StaticResource imgProntuario}" ButtonText="Entrar no Prontuário" Width="148"></core:HMVButton>                            
                            <core:HMVButton Grid.Column="1" ButtonText="Ver Detalhes da Pesquisa" Grid.Row="2" Margin="200,0,0,0" Width="160" HorizontalAlignment="Left" Name="btnPesquisa" Style="{StaticResource styleBtnPrescricao}" Click="btnPesquisa_Click" />
                        </Grid>
                    </Border>
                </Border>
            </Grid>
        </Border>
    </Grid>
</core:WindowBase>

